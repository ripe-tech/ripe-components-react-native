{
    "name": "ripe-components-react-native",
    "version": "0.19.0",
    "description": "RIPE Components for React Native",
    "keywords": [
        "components",
        "ripe",
        "react",
        "native"
    ],
    "homepage": "https://github.com/ripe-tech/ripe-components-react-native#readme",
    "bugs": {
        "url": "https://github.com/ripe-tech/ripe-components-react-native/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ripe-tech/ripe-components-react-native.git"
    },
    "license": "Apache-2.0",
    "author": "Platforme",
    "main": "index.js",
    "files": [
        "index.js",
        "LICENSE",
        "dist/**/*",
        "js/**/*.js",
        "res/**/*.ico",
        "res/**/*.png",
        "res/**/*.svg",
        "test/**/*.js",
        "react/**/*.js",
        "react/**/*.ico",
        "react/**/*.png",
        "react/**/*.svg"
    ],
    "scripts": {
        "cleanup": "rm -rf node_modules && rm -f package-lock.json",
        "lint": "eslint \"./**/*.js\"",
        "lint-fix": "eslint \"./**/*.js\" --fix",
        "prettier": "prettier \"./**/*.{js,json}\" --write",
        "pretty": "npm run prettier && npm run lint-fix && npm run svgo",
        "svgo": "svgo -r .",
        "test": "mocha --recursive",
        "upgrade": "npx sort-package-json && ncu -u"
    },
    "jest": {
        "preset": "react-native"
    },
    "devDependencies": {
        "@babel/core": "^7.17.2",
        "@babel/runtime": "^7.17.2",
        "@react-native-community/eslint-config": "^3.0.1",
        "babel-jest": "^27.5.1",
        "eslint": "^7.32.0",
        "jest": "^27.5.1",
        "metro-react-native-babel-preset": "^0.68.0",
        "mocha": "^9.2.0",
        "npm-check-updates": "^12.3.0",
        "prettier": "^2.5.1",
        "react": "^17.0.2",
        "react-test-renderer": "^17.0.2",
        "sort-package-json": "^1.54.0",
        "svgo": "^2.8.0"
    },
    "peerDependencies": {
        "@react-native-picker/picker": "^2.2.1",
        "@react-native-community/clipboard": "^1.5.1",
        "@react-native-community/datetimepicker": "^5.1.0",
        "buffer": "^6.0.3",
        "grapheme-splitter": "^1.0.4",
        "js-base64": "^3.7.2",
        "react": "^17.0.2",
        "react-native": "^0.67.2",
        "react-native-device-info": "^8.4.9",
        "react-native-document-picker": "^8.0.0",
        "react-native-gesture-handler": "^2.2.0",
        "react-native-image-picker": "^4.7.3",
        "react-native-linear-gradient": "^2.5.6",
        "react-native-picker-select": "^8.0.4",
        "react-native-safe-area-context": "^3.3.2",
        "react-native-safe-area-view": "^1.1.1",
        "react-native-svg": "^12.1.1",
        "ripe-commons": "^0.8.1",
        "ripe-commons-native": "^0.4.0"
    }
}
