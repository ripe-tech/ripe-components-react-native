{
    "name": "ripe-components-react-native",
    "version": "0.1.20",
    "description": "RIPE Components for React Native",
    "keywords": [
        "components",
        "ripe",
        "react",
        "native"
    ],
    "homepage": "https://github.com/ripe-tech/ripe-components-react-native#readme",
    "bugs": {
        "url": "https://github.com/ripe-tech/ripe-components-react-native/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ripe-tech/ripe-components-react-native.git"
    },
    "license": "Apache-2.0",
    "author": "Platforme",
    "files": [
        "index.js",
        "LICENSE",
        "dist/**/*",
        "js/**/*.js",
        "res/**/*.ico",
        "res/**/*.png",
        "res/**/*.svg",
        "test/**/*.js",
        "react/**/*.js",
        "react/**/*.ico",
        "react/**/*.png",
        "react/**/*.svg"
    ],
    "main": "index.js",
    "scripts": {
        "cleanup": "rm -rf node_modules && rm -f package-lock.json",
        "lint": "eslint \"./**/*.js\"",
        "lint-all": "npm run lint",
        "lint-fix": "eslint \"./**/*.js\" --fix",
        "prettier": "prettier \"./**/*.{js,json}\" --write",
        "pretty": "npm run prettier && npm run lint-fix && npm run svgo",
        "svgo": "svgo -r . --disable='removeDimensions,removeViewBox,minifyStyles'",
        "test": "mocha --recursive"
    },
    "peerDependencies": {
        "react": "^16.13.1",
        "react-native": "^0.61.5",
        "react-native-document-picker": "^3.3.0",
        "react-native-image-picker": "^2.3.1",
        "react-native-linear-gradient": "^2.5.6",
        "react-native-safe-area-context": "^0.7.3",
        "react-native-safe-area-view": "^1.0.0",
        "react-native-svg": "^12.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/runtime": "^7.9.2",
        "@react-native-community/eslint-config": "^0.0.7",
        "babel-jest": "^25.1.0",
        "eslint": "^6.8.0",
        "jest": "^25.1.0",
        "metro-react-native-babel-preset": "^0.59.0",
        "mocha": "^7.1.1",
        "prettier": "^1.19.1",
        "react-test-renderer": "^16.13.1",
        "svgo": "^1.3.2"
    },
    "jest": {
        "preset": "react-native"
    }
}
